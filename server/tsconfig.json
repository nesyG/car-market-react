{
    "compilerOptions": {
      "target": "es5",                     // Specify the target ECMAScript version
      "module": "commonjs",                // Specify module code generation
      "lib": ["dom", "es2015"],            // List of library files to include
      "strict": true,                      // Enable all strict type-checking options
      "esModuleInterop": true,             // Enable/disable emitting use of `import * as ns from 'module'`
      "skipLibCheck": true,                // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,  // Ensure consistent casing of file names
      "outDir": "./dist",                  // Redirect output structure to the directory
      "rootDir": "./src",                  // Specify the root directory of input files
      "declaration": true,                 // Generate corresponding `.d.ts` files
      "sourceMap": true,                // Generate source maps
    },
    "include": ["src/**/*.ts"],           // Specify files to include in compilation
    "exclude": ["node_modules"]            // Specify files to exclude from compilation
  }
  